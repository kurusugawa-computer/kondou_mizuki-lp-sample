source "https://rubygems.org"

gem "jekyll" # 静的サイトジェネレーターのJekyll本体
gem "webrick" # ローカルでJekyllサーバーを動かすために必要（Ruby 3.0以降は標準ライブラリから除外されているため明示的に指定）
gem "jekyll-remote-theme" # リモートテーマを利用するために必要
gem "jekyll-seo-tag" # SEOメタデータをHTMLヘッダーに追加するためのプラグイン
gem "jekyll-sitemap" # サイトマップを自動生成するためのプラグイン
gem "jekyll-feed" # RSSフィードを自動生成するためのプラグイン
gem "github-pages", group: :jekyll_plugins # GitHub Pagesでサイトをホストするために必要（テーマやプラグインの互換性を確保）
gem "jekyll-theme-satellite" # テーマを指定するためのプラグイン
gem "jekyll-loading-lazy" # 画像の遅延読み込みを実現するためのプラグイン
